{
  "name": "terminalsync",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "terminalsync": "./dist/cli/connect.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build:server": "tsc",
    "build:web": "cd web-ui && npm install && npm run build",
    "build": "npm run build:server && npm run build:web",
    "start": "node dist/index.js",
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/darwin-*/spawn-helper 2>/dev/null || true"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "cloudflared": "^0.5.0",
    "node-pty": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0"
  }
}
